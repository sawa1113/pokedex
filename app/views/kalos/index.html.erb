<p id="notice"><%= notice %></p>

<h1>Kalos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type 1</th>
      <th>Type 2</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kalos.each do |kalo| %>
      <tr>
        <td><%= kalo.name %></td>
        <td><%= kalo.type_1 %></td>
        <td><%= kalo.type_2 %></td>
        <td><%= kalo.height %></td>
        <td><%= kalo.weight %></td>
        <td><%= kalo.description %></td>
        <td><%= link_to 'Show', kalo %></td>
        <td><%= link_to 'Edit', edit_kalo_path(kalo) %></td>
        <td><%= link_to 'Destroy', kalo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

