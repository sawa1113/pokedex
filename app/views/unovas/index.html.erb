<p id="notice"><%= notice %></p>

<h1>イッシュ地方</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>タイプ1</th>
      <th>タイプ2</th>
      <th>高さ</th>
      <th>重さ</th>
      <th>説明</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unovas.each do |unova| %>
      <tr>
        <td><%= unova.name %></td>
        <td><%= unova.type_1 %></td>
        <td><%= unova.type_2 %></td>
        <td><%= unova.height %></td>
        <td><%= unova.weight %></td>
        <td><%= unova.description %></td>
        <td><%= link_to '詳細', unova %></td>
        <td><%= link_to '編集', edit_unova_path(unova) %></td>
        <td><%= link_to '削除', unova, method: :delete, data: { confirm: '削除してもいいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

