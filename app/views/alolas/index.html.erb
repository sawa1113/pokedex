<p id="notice"><%= notice %></p>

<h1>アローラ地方</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>タイプ1</th>
      <th>タイプ2</th>
      <th>高さ</th>
      <th>重さ</th>
      <th>説明</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alolas.each do |alola| %>
      <tr>
        <td><%= alola.name %></td>
        <td><%= alola.type_1 %></td>
        <td><%= alola.type_2 %></td>
        <td><%= alola.height %></td>
        <td><%= alola.weight %></td>
        <td><%= alola.description %></td>
        <td><%= link_to '詳細', alola %></td>
        <td><%= link_to '編集', edit_alola_path(alola) %></td>
        <td><%= link_to '削除', alola, method: :delete, data: { confirm: '削除してもいいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

