<p id="notice"><%= notice %></p>

<h1>Alolas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type 1</th>
      <th>Type 2</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alolas.each do |alola| %>
      <tr>
        <td><%= alola.name %></td>
        <td><%= alola.type_1 %></td>
        <td><%= alola.type_2 %></td>
        <td><%= alola.height %></td>
        <td><%= alola.weight %></td>
        <td><%= alola.description %></td>
        <td><%= link_to 'Show', alola %></td>
        <td><%= link_to 'Edit', edit_alola_path(alola) %></td>
        <td><%= link_to 'Destroy', alola, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

